<Window x:Class="KnowMySystem.LoadingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnowMySystem"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.IsIconVisible="True"
        Title="KnowMySystem" Height="150" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
    <Grid>
        <Label x:Name="loadingLabel" Content="Loading:" HorizontalAlignment="Left" Margin="18,21,0,69" VerticalAlignment="Center" Style="{DynamicResource SegoeUIVariable}" FontSize="14" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" Height="32"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Center" Height="20" Margin="0,0,0,0" VerticalAlignment="Center" Width="300"/>
    </Grid>
</Window>
